{
    "variables": {
      "vm_name": "ubuntu-bionic-desktop",
      "cpu": "2",
      "ram_size": "2048",
      "hyperv_switchname": "{{env `hyperv_switchname`}}",
      "docker_username": "{{env `DOCKER_USERNAME`}}",
      "docker_password": "{{env `DOCKER_PASSWORD`}}",
      "smtp_password": "{{env `SMTP_PASSWORD`}}",
      "username" : "octopus",
      "password" : "Password01!",
      "output_directory": "./output-ubuntu-18.04-desktop/",
      "input_directory": "./output-ubuntu-18.04/",
      "input_name": "ubuntu-bionic",
      "output_name": "ubuntu-bionic-desktop",
      "box_out_dir": "./dist/",
      "tmp": "%USERPROFILE%/AppData/Local/Temp"
    },
    "builders": [
    {
        "type": "hyperv-vmcx",
        "vm_name":"{{user `vm_name`}}",
        "clone_from_vmcx_path": "{{user `input_directory`}}",
        "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
        "ssh_password": "{{user `password`}}",
        "ssh_username": "{{user `username`}}",
        "memory": "{{user `ram_size`}}",
        "cpus": "{{user `cpu`}}",
        "switch_name":"{{user `hyperv_switchname`}}",
        "enable_secure_boot":false,
        "output_directory": "{{user `output_directory`}}",
        "temp_path": "{{user `tmp`}}"
    },
    {
        "type": "virtualbox-ovf",
        "source_path": "{{user `input_directory`}}/{{user `input_name`}}.ovf",
        "vm_name":"{{user `vm_name`}}",
        "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
        "ssh_password": "{{user `password`}}",
        "ssh_username": "{{user `username`}}",
        "shutdown_timeout": "10m",
        "output_directory": "{{user `output_directory`}}"
    }],
    "provisioners": [{
        "environment_vars": [
          "SSH_USERNAME={{user `username`}}"
        ],    
        "type": "shell",
        "execute_command": "echo '{{user `password`}}' | {{.Vars}} sudo -S -E bash {{.Path}}",
        "scripts": [
            "./scripts/update.sh",
            "./scripts/desktop.sh",
            "./scripts/cleanup.sh",
            "./scripts/java-jenkins-tomcat.sh"
        ],
        "environment_vars": [
          "DOCKER_USERNAME={{user `docker_username`}}",
          "DOCKER_PASSWORD={{user `docker_password`}}",
          "SMTP_PASSWORD={{user `smtp_password`}}"
        ],
        "expect_disconnect": true
    }
    ],
    "post-processors": [
        {
        "type": "vagrant",
        "keep_input_artifact": true,
        "output": "./{{user `box_out_dir`}}/{{.Provider}}-{{user `output_name`}}.box"
        }
    ]
    
}